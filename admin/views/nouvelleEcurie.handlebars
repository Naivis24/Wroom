<center><h2>Ajouter une écurie</h2></center>
<form method="post">
  <table>
    <tr>
      <td><label>Nom :</label></td>
      <td><input type="text" id="nom" name="nom" required/></td>
    </tr>
    <tr>
      <td><label>Directeur :</label></td>
      <td><input type="text" id="dir" name="dir" required/></td>
    </tr>
    <tr>
      <td><label>Adresse du siège :</label></td>
      <td><input type="text" id="adr" name="adr" required/></td>
    </tr>
    <tr>
      <td><label>Points :</label></td>
      <td><input type="text" id="pts" name="pts" required/></td>
      <td><label>pts</label></td>
    </tr>
    <tr>
      <td><label>Pays :</label></td>
      <td>
        <select id="pays" name="pays" required>
          {{#each listeNatio}}
            <option value="{{this.paynum}}">{{this.paynom}}</option>
          {{/each}}
        </select>
      </td>
    </tr>
    <tr>
      <td><label>Fournisseur :</label></td>
      <td>
        <select id="fourn" name="fourn" required>
          {{#each listeFourn}}
            <option value="{{this.fpnum}}">{{this.fpnom}}</option>
          {{/each}}
        </select>
      </td>
    </tr>
    <tr>
      <td><label>Image :</label></td>
      <td><input id="img" name="img" type="file" required/></td>
    </tr>
    <tr>
  </table>

  <input type="submit" name="Valider" value="Valider"/>
</form>
