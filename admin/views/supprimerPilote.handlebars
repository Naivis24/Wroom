<h2>Supprimer un pilote</h2>
{{#each lePilote}}
  <center>
    <form method="post">
      <label>Etes-vous sûr de vouloir supprimer {{this.pilprenom}} {{this.pilnom}} ?</label>
      <label>(cela supprimera toutes les cources auxquelles ce pilote a participé)</label>
      <br>
      <input type="submit" name="Valider" value="Valider"/>
      <button formaction="../../">Retour</button>
    </form>
  </center>
{{/each}}
